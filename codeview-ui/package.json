{
  "name": "codeview-ui",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run wasm:build && PUBLIC_CODEVIEW_PLATFORM=local bunx --bun vite dev",
    "build": "bun run wasm:build && PUBLIC_CODEVIEW_PLATFORM=local bunx --bun vite build",
    "preview": "PUBLIC_CODEVIEW_PLATFORM=local bunx --bun vite preview",
    "local": "cargo run --manifest-path ../Cargo.toml -p codeview-cli -- ui",
    "check": "PUBLIC_CODEVIEW_PLATFORM=local bunx svelte-check --tsconfig ./tsconfig.json",
    "local:sync": "PUBLIC_CODEVIEW_PLATFORM=local bunx svelte-kit sync",
    "cf:check": "PUBLIC_CODEVIEW_PLATFORM=cloudflare bunx svelte-check --tsconfig ./tsconfig.json",
    "cf:sync": "PUBLIC_CODEVIEW_PLATFORM=cloudflare bunx svelte-kit sync",
    "test": "vitest",
    "test:run": "vitest run",
    "wasm:build": "wasm-pack build ../codeview-rustdoc --target web --out-dir ../codeview-ui/src/lib/wasm/codeview-rustdoc --out-name codeview_rustdoc --no-default-features --features wasm",
    "db:generate": "bunx drizzle-kit generate",
    "db:studio": "bunx drizzle-kit studio",
    "cf:types": "bun run cf:types:app && bun run cf:types:services",
    "cf:types:app": "bunx wrangler types src/cloudflare.d.ts",
    "cf:types:services": "bunx wrangler types -c ./src/lib/server/cloudflare/workers/wrangler.toml ./src/lib/server/cloudflare/workers/cloudflare.d.ts",
    "cf:build": "bun run wasm:build && PUBLIC_CODEVIEW_PLATFORM=cloudflare vite build",
    "cf:dev": "bun run cf:build && bunx wrangler dev -c ./wrangler.toml -c ./src/lib/server/cloudflare/workers/wrangler.toml --persist-to .wrangler",
    "cf:dev:clear": "rm -rf .wrangler && bun run cf:dev",
    "cf:deploy:workers": "bun run wasm:build && bunx wrangler deploy -c ./src/lib/server/cloudflare/workers/wrangler.toml",
    "cf:deploy:app": "bun run cf:build && bunx wrangler deploy",
    "cf:deploy": "bun run cf:deploy:workers && bun run cf:deploy:app"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@cloudflare/workers-types": "^4.20260131.0",
    "@eslym/sveltekit-adapter-bun": "^2.0.5",
    "@jesterkit/exe-sveltekit": "^0.1.7",
    "@sveltejs/adapter-cloudflare": "^7.2.6",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.8",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.1.0",
    "@typescript-eslint/types": "^8.54.0",
    "drizzle-kit": "^1.0.0-beta.9-e89174b",
    "svelte": "^5.49.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-wasm-esm": "^1.0.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  },
  "dependencies": {
    "codeview-rustdoc": "file:src/lib/wasm/codeview-rustdoc",
    "@logtape/logtape": "^2.0.2",
    "@lucide/svelte": "^0.563.1",
    "@shikijs/transformers": "^3.22.0",
    "d3-force": "^3.0.0",
    "drizzle-orm": "^1.0.0-beta.9-e89174b",
    "fzstd": "^0.1.1",
    "markdown-it": "^14.1.0",
    "runed": "^0.37.1",
    "shiki": "^3.22.0",
    "valibot": "^1.2.0"
  }
}
